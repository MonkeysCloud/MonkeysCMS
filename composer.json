{
    "name": "monkeyscloud/monkeyscms",
    "description": "A modern, code-first CMS built on MonkeysLegion - combining the best of Drupal and WordPress",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jorge Peraza",
            "email": "jorge@monkeys.cloud"
        }
    ],
    "keywords": ["cms", "content-management", "monkeyslegion", "php", "framework"],
    "require": {
        "php": "^8.4",
        "ext-pdo": "*",
        "ext-json": "*",
        "monkeyscloud/monkeyslegion-mlc": "^2.0",
        "monkeyscloud/monkeyslegion-template": "^1.0",
        "monkeyscloud/monkeyslegion-router": "^2.0",
        "monkeyscloud/monkeyslegion-migration": "^1.0",
        "monkeyscloud/monkeyslegion-http": "^1.0",
        "monkeyscloud/monkeyslegion-entity": "^1.0",
        "monkeyscloud/monkeyslegion-di": "^1.0",
        "monkeyscloud/monkeyslegion-dev-server": "^1.0",
        "monkeyscloud/monkeyslegion-database": "^1.0",
        "monkeyscloud/monkeyslegion-core": "^1.0",
        "monkeyscloud/monkeyslegion-cli": "^1.0",
        "monkeyscloud/monkeyslegion-telemetry": "^2.0",
        "monkeyscloud/monkeyslegion-events": "^1.0",
        "monkeyscloud/monkeyslegion-validation": "^1.0",
        "monkeyscloud/monkeyslegion-query": "^1.0",
        "monkeyscloud/monkeyslegion-i18n": "^2.0",
        "monkeyscloud/monkeyslegion-auth": "^2.0",
        "monkeyscloud/monkeyslegion-mail": "^1.0",
        "monkeyscloud/monkeyslegion-logger": "^1.0",
        "monkeyscloud/monkeyslegion-files": "^2.0",
        "monkeyscloud/monkeyslegion-cache": "^1.0",
        "nyholm/psr7": "^1.8",
        "monolog/monolog": "^3.9",
        "vlucas/phpdotenv": "^5.6",
        "laminas/laminas-diactoros": "^3.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^12.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers/cache.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "serve": "php vendor/bin/dev-server",
        "server:start": "php vendor/bin/dev-server",
        "server:start:public": "php vendor/bin/dev-server 0.0.0.0 8000",
        "server:stop": "php vendor/bin/dev-server stop",
        "server:restart": "php vendor/bin/dev-server restart",
        "server:status": "php vendor/bin/dev-server status",
        "test": "phpunit",
        "test:unit": "phpunit --testsuite=Unit",
        "test:integration": "phpunit --testsuite=Integration",
        "test:coverage": "phpunit --coverage-html coverage",
        "phpstan": "phpstan analyse app tests --level=8",
        "cs": "phpcs --standard=PSR12 app tests",
        "cs-fix": "phpcbf --standard=PSR12 app tests",
        "check": [
            "@cs",
            "@phpstan",
            "@test"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "extra": {
        "monkeyslegion": {
            "providers": [
                "App\\Cms\\Provider\\CmsServiceProvider"
            ]
        }
    }
}
